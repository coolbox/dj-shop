<%= image_tag @playlist["images"][0]["url"], width: 100, height: 100 %>
<h1><%= @playlist["name"] %>(<%= @tracks.count %>)</h1>
<p><%= @playlist["description"] %></p>

<ul>
  <% @tracks.each do |track| %>
    <li>
      <%= image_tag track.spotify_image_url, width: 50, height: 50 %>
      <p><%= track.track_name %> - <%= track.artist_name %></p>
      <p>Duration: <%= time_as_str(track.duration_ms) %></p>
      <p>Release date: <%= release_date_format(track.release_date, track.release_date_precision) %></p>
      <ul>
        <li><%= link_to("Spotify", track.spotify_url, target: "_blank") %></li>

        <% if !track.itunes_url.blank? %>
          <li><%= link_to("iTunes", track.itunes_url, target: "_blank") %></li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>
