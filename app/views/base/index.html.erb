<%= link_to(
  "Sign in with Strava",
  user_spotify_omniauth_authorize_path(redirect_uri: root_url)
) %>

<% if @playlists %>
  <ul>
    <% @playlists.each do |p| %>
      <li>
        <%= link_to playlist_url(p["id"]) do %>
          <%= image_tag p["images"][0]["url"], width: 100, height: 100 %>
        <% end %>

        <%= link_to playlist_url(p["id"]) do %>
          <%= p["name"] %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>
